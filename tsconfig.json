{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "types": [
      "node",
      "mocha",
      "chai",
      "chai-as-promised"
    ],
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true
  },
  "include": [
    "src"
  ]
}
